{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<a href="{{ path('category_new') }}">Créer nouvelle catégorie</a>

	<table class="table">
		<thead>
			<tr>
				{# <th>Id</th> #}
				<th>Toutes les catégories</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					{# <td>{{ category.id }}</td> #}
					<td>{{ category.title }}</td>
					<td>
						<a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
						<a href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
