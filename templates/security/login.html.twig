{% block body %}


	<h1>Connectez-vous</h1>

	<form action="{{path('games_index')}}" method="get">
		<div class="form_group">
			<input placeholder="Adresse email" required name="_username" type="text" class="form_control">
		</div>
		<div class="form_group">
			<input placeholder="Mot de passe" required name="_password" type="password" class="form_control">
		</div>
		<div class="form-group">
			<button id="myButton" type="submit" class="btn btn-success">Connexion !</button>
		
		</div>
	</form>
{% endblock %}
