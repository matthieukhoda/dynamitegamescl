{% extends 'base.html.twig' %}

{% block title %}Games index
{% endblock %}

{% block body %}
	<h1>Jeux</h1>

	<table class="table">
		<thead>
			<tr>

				<th>Tous les jeux</th>
				<th>Description</th>
				<th>Prix</th>
				<th>Stock</th>
				<th>Plateforme</th>
				<th>Cat√©gorie</th>

			</tr>
		</thead>
		<tbody>
			<a href="{{ path('games_new') }}">Ajouter un jeu</a>
			{% for game in games %}
				<tr>
					<td>{{ game.title }}</td>
					<td>{{ game.description }}</td>
					<td>{{ game.price }}</td>
					<td>{{ game.stock }}</td>
					<td>
						{% for plateform in game.plateforms %}

							{{ plateform.plateforme }}<br>
						{% endfor %}

					</td>

					<td>
						{% for category in game.categories %}
							{{ category.title }}<br>
						{% endfor %}

					</td>
				</tr>
				<td>
					<a href="{{ path('games_show', {'id': game.id}) }}">Voir</a>
					<a href="{{ path('games_edit', {'id': game.id}) }}">Editer</a>
				</td>
			</tbody>
		</tbody>
	</tr>
{% else %}
	<tr>
		<td colspan="7">no records found</td>
	</tr>
{% endfor %}</tbody></table>{% endblock %}
