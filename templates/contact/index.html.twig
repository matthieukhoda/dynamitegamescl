{% block title %}{% endblock %}

<link rel="stylesheet" href="{{ asset('style.css') }}">
<link rel="stylesheet" href="{{ asset('bootstrap.min.css') }}"> {% block stylesheets %}{% endblock %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
{% block javascripts %}
	<script src="{{ asset('script.js') }}"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
{% endblock %}

{% block body %}
	<div id="header">
		<a href="/front"><img id="dglogo" src="{{asset('assets/images/articles/dglogo.png') }}"/></a>

		<form id="research" class="form-inline my-2 my-lg-0">
			<input id="go" class="form-control mr-sm-2" type="text" placeholder="Que cherchez-vous ?">
			<button class="btn btn-secondary my-2 my-sm-0" type="submit">Go !</button>
		</form>
		<a href="https://fr-fr.facebook.com/pg/Dynamite-Games-Clermont-Fd-16-rue-saint-esprit-182041461845273/about/?ref=page_internal" target="_blank" id="mag" class="btn btn-lg btn-success">
			<span class="glyphicon glyphicon-map-marker"></span>
			Votre magasin de Clermont</a>
		<a href="#" id="contact" class="btn btn-lg btn-success">
			<span class="glyphicon glyphicon-send"></span>
			Contactez nous !</a>
	</div>
	<h2 id="vaan">Vous voulez nous transmettre un message? Réserver un jeu? Contactez nous, on vous répondra rapidement. (n'oubliez pas d'indiquer le nom du jeu que vous souhaitez réserver)</h2>
	<div></div>

	<div id="form" class="col-sm-12">
		<div class="form-group">
			{{ form_start(form) }}
			{{ form_row(form.nom, {'attr': {'class': 'form-control'}, 'attr': {'placeholder' : 'Indiquez votre nom' }}) }}
		</div>
		<div class="form-group">
			{{ form_row(form.email, {'attr': {'class': 'form-control'}, 'attr': {'placeholder' : 'Votre adresse mail' }}) }}
		</div>
		<div class="form-group">
			{{ form_row(form.message, {'attr': {'class': 'form-control'}, 'attr': {'placeholder' : 'Votre message' }}) }}
		</div>
		<div class="form-group">
			<input type="submit" onclick="myFunction()" value="Send" class="btn btn-primary py-3 px-5">
		</div>
		{{ form_end(form) }}
	</div>
	<img id="basch" src="{{asset('assets/images/articles/basch.jpg') }}" alt=" basch ">
</div>
<a id="back" href="{{ path('front_index') }}" class="btn btn-lg btn-info">
	<span class="glyphicon glyphicon-step-backward">Retour à l'accueil</span>
</a>{% endblock %}
